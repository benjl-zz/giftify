
<div class="row-fluid">
  <div class="span1"></div>
    <div class="span10 well">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>
              <h3>Name</h3>
            </th>
            <th>
              <h3>Funds</h3>
            </th>
            <th class="pull-right">
              <h3>Actions</h3>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @pages.each do |page| %>
            <tr>
              <td><%= page.name %></td>
              <td>$X.XX</td>
              <td><div class = "btn-group pull-right">
                <%= link_to 'Show', short_page_path(page.name), :class => "btn" %>
                <%= link_to 'Edit', short_page_edit_path(page.name), :class => "btn" %>
                <%= link_to 'Destroy', page, :class => "btn btn-danger", :confirm => 'Are you sure?', :method => :delete %></div>
              </td>
            </tr>
          <%end%>
        </tbody>
        <tfoot>
          <tr>
            <th colspan="3">
              <%= link_to "New Page", new_page_path, :class => "btn btn-success" %>
            </th>
          </tr>
        </tfoot>
      </table>
      <div class="span1"></div>
    </div>
  </div>
</div>

