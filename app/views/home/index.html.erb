<table>
  <tr>
    <th>Name</th>
    <th></th>
  </tr>
 
<% @pages.each do |page| %>
  <tr>
    <td><%= page.name %></td>
    <td><div class = "btn-group">
    <%= link_to 'Show', page_path(page.name), :class => "btn" %>
    <%= link_to 'Edit', edit_page_path(page.name), :class => "btn" %>
